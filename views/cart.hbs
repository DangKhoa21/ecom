<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->


<!-- Cart Page Start -->
{{#with cart}}
<div class="container-fluid py-5">
    <div class="container py-5">

        <div class="row g-4">
            {{#if items.length}}

            <div class="table-responsive col-sm-12 col-lg-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Products</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Move to wishlist</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}

                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <a href="/shop/{{ product.id }}">
                                        <img src="{{ product.imagePath }}" class="img-fluid me-5 rounded-circle"
                                            style="width: 80px; height: 80px;" alt="{{ product.name }}">
                                    </a>
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">{{ product.name }}</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">{{ product.price }}</p>
                            </td>
                            <td>
                                <a href="#"
                                    class="btn border border-secondary rounded-pill px-4 py-2 mt-3 text-primary"><i
                                        class="fa fa-heart  text-primary"></i> Move</a>
                            </td>
                            <td>
                                <button class="btn btn-md rounded-circle bg-light border mt-3">
                                    <i class="fa fa-times text-danger"></i>
                                </button>
                            </td>
                        </tr>

