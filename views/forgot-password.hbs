<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Forgot Password</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Forgot Password</li>
    </ol>
</div>
<!-- Single Page Header End -->

<!-- Forgot Password Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Forgot Password</h1>
                        {{#if done}}
                        <p class="mb-4">An OTP code has been sent to your email.</p>
                        {{else}}
                        <p class="mb-4">Enter your email and we'll send you an instruction to reset your password.</p>
                        {{/if}}

                    </div>
                </div>
                {{#unless done}}
                <div class="col-6 mx-auto">
                    <form action="/users/forgot" method="post" id="formForgot">
                        {{#if message}}
                        <div class="col-md-12">
                            <div class="p-3 mt-3 alert alert-warning">{{{message}}}</div>
                        </div>
                        {{/if}}
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Email"
                            name="email" required pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                        {{!-- <input type="password" class="w-100 form-control border-0 py-3 mb-4"
                            placeholder="OTP code" name="password" required pattern=".{8,}"
                            title="Eight or more characters"> --}}
                        <button class="w-100 btn form-control border-secondary py-3 mb-3 bg-white text-primary"
                            type="submit">Reset Password</button>
                        <input type="hidden" name="reqUrl" value="{{reqUrl}}">
                    </form>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
</div>
<!-- Forgot Password End -->