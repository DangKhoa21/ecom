<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Login</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Login</li>
    </ol>
</div>
<!-- Single Page Header End -->

<!-- Login Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded ">
            <div class="row g-4 d-flex justify-content-center">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Login or Sign up</h1>
                        <p class="mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur illo
                            tempore
                            sit doloribus, sapiente placeat et rerum ab ipsam sint repellat fugit similique aliquid,
                            totam sunt maiores molestias amet quam..</p>
                    </div>
                </div>
                <div class="col-5 mx-3">
                    {{#if loginMessage}}
                    <div class="col-5">
                        <div class="p-3 mt-3 alert alert-warning">{{{loginMessage}}}</div>
                    </div>
                    {{/if}}
                    <form action="/users/login-sign-up" method="post">
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Email"
                            name="email" required pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                        <input type="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Password"
                            name="password" required pattern=".{8,}" title="Eight or more characters">
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="newaccount" name="keepSignedIn">
                            <label class="form-check-label" for="newaccount">
                                Keep me logged in
                            </label>
                        </div>
                        <button class="w-100 btn form-control border-secondary py-3 mb-3 bg-white text-primary"
                            type="submit">Login</button>
                        <input type="hidden" name="reqUrl" value="{{reqUrl}}">
                    </form>
                    <a href="/reset-password">Forgot Password?</a>
                </div>
                <div class="col-6 mx-3">
                    <form action="" class="">
                        <input type="text" class="w-100 form-control border-0 py-3 mb-4"
                            placeholder="Create your Username">
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Email" required
                            pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                        <input type="password" class="w-100 form-control border-0 py-3 mb-4" placeholder="Password"
                            required pattern=".{8,}" title="Eight or more characters">
                        <input type="password" class="w-100 form-control border-0 py-3 mb-4"
                            placeholder="Confirm password">
                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary"
                            type="submit">Sign up</button>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<!-- Login End -->