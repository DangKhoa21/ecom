<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Shop</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Shop</li>
    </ol>
</div>
<!-- Single Page Header End -->


<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Fresh fruits shop</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <form class="input-group w-100 mx-auto d-flex" action="/shop" method="GET">
                            <input type="search" class="form-control p-3" placeholder="Search" name="keyword"
                                value="{{keyword}}" aria-describedby="search-icon-1" required>
                            <button id="search-icon-1" class="input-group-text p-3"><i
                                    class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div
                            class="bg-light p-3 rounded d-flex justify-content-between align-items-center mb-4 dropdown">
                            <label for="fruits">Default Sorting:</label>
                            <a class="dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                {{sort}}
                            </a>
                            <div id="fruits" name="fruitlist" class="border-0 dropdown-menu bg-light me-3"
                                aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="{{originalUrl}}&sort=price">Price</a>
                                <a class="dropdown-item" href="{{originalUrl}}&sort=newest">Newest</a>
                                <a class="dropdown-item" href="{{originalUrl}}&sort=popularity">Popularity</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4 class="mb-2">Price</h4>
                                    <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput"
                                        min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
                                    <output id="amount" name="amount" min-velue="0" max-value="500"
                                        for="rangeInput">0</output>
                                </div>
                            </div>
                            {{> sidebar}}
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            {{#each games}}
                            <div class="col-md-6 col-lg-6 col-xl-4">
                                {{> product }}
                            </div>
                            {{/each}}
                            <div class="col-12" id="pagination">
                                {{{ createPagination pagination paginationClass="pagination d-flex
                                justify-content-center mt-5"
                                leftText="&laquo;" rightText = "&raquo;"}}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->

<script>
    document.querySelectorAll('#pagination li').forEach((li, index) => {
        li.classList.add('page-item')
    });

    document.querySelectorAll('#pagination a').forEach(a => {
        a.classList.add('page-link');
    })
</script>