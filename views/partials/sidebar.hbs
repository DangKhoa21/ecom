<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            {{#each categories}}
            <li>
                <div class="d-flex justify-content-between fruite-name">
                    <a href="/shop?category={{id}}"><i class="fas fa-gamepad me-2"></i>{{name}}</a>
                    <span>({{Products.length}})</span>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Brands</h4>
        {{#each brands}}
        <div class="mb-2">
            <input type="radio" class="me-2" id="Brands-{{id}}" name="Brands-{{id}}" value="{{name}}"
                onclick="document.location.href='/shop?brand={{id}}'">
            <label for="Brands-{{id}}">{{name}} ({{Products.length}})</label>
        </div>
        {{/each}}
    </div>
</div>
<div class="col-lg-12">
    <h4 class="mb-3">Featured products</h4>
    {{#each featuredProducts}}
    <div class="d-flex align-items-center justify-content-start">
        <div class="rounded me-4" style="width: 100px; height: 100px;">
            <a href="/shop/{{ id }}">
                <img src="{{imagePath}}" class="img-fluid rounded" alt="{{name}}">
            </a>
        </div>
        <div>
            <a href="/shop/{{ id }}"><h6 class="mb-2">{{name}}</h6></a>
            {{{createStarList stars}}}
            <div class="d-flex mb-2">
                <h5 class="fw-bold me-2 text-danger">{{price}} $</h5>
                <h5 class="text-muted text-decoration-line-through fs-6">{{oldPrice}} $</h5>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="d-flex justify-content-center my-4">
        <a href="/shop" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">View
            More</a>
    </div>
</div>
<div class="col-lg-12">
    <h4 class="mb-3">Tags</h4>
    <div class="d-flex flex-wrap justify-content-start">
        {{#each tags}}
        <a class="link border border-secondary p-2 m-1" href='/shop?tag={{id}}'>{{name}}</a>
        {{/each}}
    </div>
</div>
<div class="col-lg-12">
    <div class="position-relative">
        <img src="/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
        <div class="position-absolute" style="top: 80%; left: 20px; transform: translateY(-50%);">
            <h3 class="text-white fw-bold">Your next<br>adventure<br>awaits!</h3>
        </div>
    </div>
</div>