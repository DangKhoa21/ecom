<div
    class="d-flex flex-column rounded position-relative fruite-item border border-secondary border-top-0 rounded-bottom">
    <div class="fruite-img">
        <a href="/shop/{{ id }}">
            <img src="{{imagePath}}" class="img-fluid w-100 rounded-top" alt="{{name}}">
        </a>
    </div>
    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
        <div class="d-flex align-items-center">
            {{stars}} <i class="fas fa-star text-white ms-1"></i>
        </div>
    </div>
    <div class="p-4">
        <a href="/shop/{{ id }}">
            <h4>{{name}}</h4>
        </a>
        <p>{{summary}}</p>
    </div>
    <div class="p-4 pt-0 mt-auto">
        <div class="d-flex justify-content-around flex-lg-wrap mb-4">
            <p class="text-dark fs-3 fw-bold mb-0">${{price}}</p>
            <p class="text-muted fs-5 fw-bold mb-0 text-decoration-line-through">${{oldPrice}}</p>
        </div>
        {{#if isPurchased}}
        <div class="d-flex justify-content-end flex-lg-wrap">
            <a class="btn border rounded-pill px-3 text-muted"><i
                class="fa fa-check me-2 text-muted"></i> Purchased</a>
        </div>
        {{else}}
        <div class="d-flex justify-content-end flex-lg-wrap">
            <a onclick="addCart({{ id }}, 1)" class="btn border border-secondary rounded-pill px-3 text-primary">
                <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
            </a>
        </div>
        {{/if}}
    </div>
</div>